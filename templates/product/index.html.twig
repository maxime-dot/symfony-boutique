{% extends 'base.html.twig' %}

{% block title %}Nos Produits disponibles{% endblock %}

{% block body %}

        <div class="row">
            <div class="col-md-3">
                    <h1>Filtrer</h1>
                    {{ form_start(form) }}
                                {{form(form)}}
                    {{ form_end(form) }}
            </div>
            <div class="col-md-9">
                        <h1>Nos Produits actuel</h1>
        
                        <div class="row product-container">
                                {% for produit in products  %}
                                    <div class="col-md-4">
                                        <div class="product-items text-center">
                                            <a href="{{ path('app_product_show', {'slug': produit.slug }) }}"><img src="/uploads/{{ produit.illustration }}" alt="{{ produit.name }}" class="img-fluid"></a>
                                            <h5>{{ produit.name }}</h5>
                                            <span class="product-subtitle">{{ produit.subtitle }}</span>
                                            <span class="product-price">{{ (produit.price / 100)|number_format(2) }}</span>

                                        </div>
                                    </div>
                                {% endfor %}
                        </div>

            </div>
        </div>

        


        
{% endblock %}
